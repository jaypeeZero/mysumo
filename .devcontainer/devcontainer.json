{
    "name": "Jekyll Site",
    "image": "mcr.microsoft.com/devcontainers/ruby:3",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "postCreateCommand": "bundle install",
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "forwardPorts": [4000],
    "remoteUser": "vscode"
}
